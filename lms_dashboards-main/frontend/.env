# Frontend Environment Configuration
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=EduAdmin Dashboard
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_API_RETRY_ATTEMPTS=3

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# UI Configuration
REACT_APP_DEFAULT_THEME=light
REACT_APP_ITEMS_PER_PAGE=50
REACT_APP_AUTO_REFRESH_INTERVAL=30000

# Security
REACT_APP_TOKEN_REFRESH_INTERVAL=540000  # 9 minutes
REACT_APP_SESSION_TIMEOUT=3600000        # 1 hour

# External Services (if needed later)
# REACT_APP_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# REACT_APP_SENTRY_DSN=https://xxxxxxxx@xxxxx.ingest.sentry.io/xxxxx